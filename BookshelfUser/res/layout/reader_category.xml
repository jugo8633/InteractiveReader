<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="525dp"
        android:layout_height="695dp"
        android:layout_centerInParent="true"
        android:background="@drawable/reader_option" >

        <TextView
            android:id="@+id/textViewCategoryTitle"
            style="@style/ReaderOptionTitle"
            android:text="@string/category_title" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/textViewCategoryTitle"
            android:background="@color/border_line" />

        <ListView
            android:id="@+id/listViewCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textViewCategoryTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:listSelector="@android:color/transparent" >

        </ListView>
    </RelativeLayout>

</RelativeLayout>
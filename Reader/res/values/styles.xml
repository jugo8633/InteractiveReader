<resources>

    <style name="Theme.NoBackground" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ReaderOptionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0d0d0d</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PageInfoTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#7a7a7a</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PageInfoDescript">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0d0d0d</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>